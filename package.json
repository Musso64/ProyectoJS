{
  "name": "task-dashboard",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./src/input.css -o ./src/output.css --watch\" \"npx live-server --port=3000 --watch=src,output.css\"",
    "build": "npx tailwindcss -i ./src/input.css -o ./src/output.css --minify"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.0"
  }
}